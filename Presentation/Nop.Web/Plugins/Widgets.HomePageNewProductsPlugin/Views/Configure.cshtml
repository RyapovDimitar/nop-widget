@model Nop.Plugin.Widgets.HomePageNewProductsPlugin.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="WidgetsHomePageNewProductsPlugin" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9">
                        <nop-editor asp-for="NumberOfProducts" />
                        <span asp-validation-for="NumberOfProducts"></span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.ListBoxFor(x => x.WidgetZone, Model.AvailableWidgetZones)
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>